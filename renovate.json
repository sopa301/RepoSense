{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "enabled": true
    },
    {
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["patch"],
      "enabled": true
    }
  ],
  "dependencyDashboard": true
}
